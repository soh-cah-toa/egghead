# FIXME: This file should be autogenerated by Autoconf, not hard-coded.

INC_DIR = include
SRC_DIR = src
BIN_DIR = bin

INSTALL_DIR = /usr/local/bin

CC       = gcc
CC_INC   = -I./include
CC_O_OUT = -o
CC_WARN  = -W -Wall
CFLAGS   = $(CC_INC) -O2 -g -fstack-protector

all:
	rm -rf $(BIN_DIR)
	mkdir $(BIN_DIR)
	$(CC) $(CFLAGS) $(CC_INC) $(CC_WARN) \
	$(CC_O_OUT) $(BIN_DIR)/egghead $(SRC_DIR)/*

install:
	install $(BIN_DIR)/egghead $(INSTALL_DIR)/egghead

uninstall:
	rm -rf $(INSTALL_DIR)/egghead

clean:
	rm -rf $(SRC_DIR)/*.o
	rm -rf $(BIN_DIR)/
